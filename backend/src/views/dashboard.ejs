<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
      body {
        overflow-x: hidden;
      }
      .sidebar {
        width: 250px;
        height: 100vh;
        position: fixed;
        background: #343a40;
        padding-top: 20px;
      }
      .sidebar a {
        color: white;
        display: block;
        padding: 10px 20px;
        text-decoration: none;
      }
      .sidebar a:hover {
        background: #495057;
      }
      .dashboard-content {
        margin-left: 250px;
        padding: 20px;
        width: calc(100% - 250px);
        overflow: auto;
      }
      .dashboard-card {
        background: white;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
        font-weight: bold;
      }
      .chart-container {
        width: 100%;
        max-width: 400px;
        height: 250px;
      }
    </style>
  </head>
  <body class="bg-light">
    <!-- SIDEBAR -->
    <nav class="sidebar"><%- include('includes/sidebar.ejs') %></nav>

    <!-- MAIN CONTENT -->
    <div class="dashboard-content">
      <header><%- include('includes/header.ejs') %></header>

      <h1 class="fs-2 fw-bold mb-4">Admin Dashboard</h1>

      <!-- Stats Cards -->
      <div class="row row-cols-1 row-cols-md-4 g-3">
        <div class="col">
          <div class="dashboard-card" id="totalUsers">Loading...</div>
        </div>
        <div class="col">
          <div class="dashboard-card" id="newUsersToday">Loading...</div>
        </div>
        <div class="col">
          <div class="dashboard-card" id="totalOrders">Loading...</div>
        </div>
        <div class="col">
          <div class="dashboard-card" id="ordersToday">Loading...</div>
        </div>
        <div class="col">
          <div class="dashboard-card" id="weeklyOrders">Loading...</div>
        </div>
        <div class="col">
          <div class="dashboard-card" id="monthlyOrders">Loading...</div>
        </div>
        <div class="col">
          <div class="dashboard-card" id="totalRevenue">Loading...</div>
        </div>
        <div class="col">
          <div class="dashboard-card" id="todayRevenue">Loading...</div>
        </div>
      </div>

      <!-- Charts Section -->
      <div class="row mt-4">
        <div class="col-md-4">
          <div class="card p-3 shadow">
            <h5 class="text-center">Order Status</h5>
            <div class="chart-container">
              <canvas id="orderStatusChart"></canvas>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card p-3 shadow">
            <h5 class="text-center">Revenue Trends</h5>
            <div class="chart-container">
              <canvas id="revenueChart"></canvas>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card p-3 shadow">
            <h5 class="text-center">Best-Selling Products</h5>
            <div class="chart-container">
              <canvas id="bestSellingChart"></canvas>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
      async function fetchDashboardData() {
        try {
          const response = await axios.get("/api/v1/dashboard/dashboard");
          const data = response.data.data;

          // Stats Section
          document.getElementById(
            "totalUsers"
          ).innerHTML = `<strong>Total Users:</strong> ${data.totalUsers}`;
          document.getElementById(
            "newUsersToday"
          ).innerHTML = `<strong>New Users Today:</strong> ${data.newUsersToday}`;
          document.getElementById("totalOrders").innerHTML = `
                    <a href="/api/v1/orders/order/get-order" style="color: black; text-decoration: none;">
                        <strong>Total Orders:</strong> ${data.totalOrders}
                    </a>`;
          document.getElementById(
            "ordersToday"
          ).innerHTML = `<strong>Orders Today:</strong> ${data.ordersToday}`;
          document.getElementById(
            "weeklyOrders"
          ).innerHTML = `<strong>Weekly Orders:</strong> ${data.weeklyOrders}`;
          document.getElementById(
            "monthlyOrders"
          ).innerHTML = `<strong>Monthly Orders:</strong> ${data.monthlyOrders}`;
          document.getElementById(
            "totalRevenue"
          ).innerHTML = `<strong>Total Revenue:</strong> ₹${data.totalRevenue}`;
          document.getElementById(
            "todayRevenue"
          ).innerHTML = `<strong>Today's Revenue:</strong> ₹${data.todayRevenue}`;

          // Order Status Chart
          new Chart(document.getElementById("orderStatusChart"), {
            type: "bar",
            data: {
              labels: data.orderStatusCounts.map((order) => order._id),
              datasets: [
                {
                  label: "Orders",
                  data: data.orderStatusCounts.map((order) => order.count),
                  backgroundColor: ["#007bff", "#28a745", "#dc3545", "#ffc107"],
                },
              ],
            },
            options: { responsive: true, maintainAspectRatio: false },
          });

          // Revenue Chart
          new Chart(document.getElementById("revenueChart"), {
            type: "line",
            data: {
              labels: ["Total", "Today", "Monthly"],
              datasets: [
                {
                  label: "Revenue (₹)",
                  data: [
                    data.totalRevenue,
                    data.todayRevenue,
                    data.monthlyRevenue,
                  ],
                  borderColor: "#007bff",
                  fill: false,
                },
              ],
            },
            options: { responsive: true, maintainAspectRatio: false },
          });

          // Best-Selling Products Chart
          new Chart(document.getElementById("bestSellingChart"), {
            type: "pie",
            data: {
              labels: data.bestSellingProducts.map(
                (product) => product.productDetails.name
              ),
              datasets: [
                {
                  data: data.bestSellingProducts.map(
                    (product) => product.totalSold
                  ),
                  backgroundColor: [
                    "#007bff",
                    "#28a745",
                    "#dc3545",
                    "#ffc107",
                    "#17a2b8",
                  ],
                },
              ],
            },
            options: { responsive: true, maintainAspectRatio: false },
          });
        } catch (error) {
          console.error("Error fetching dashboard data:", error);
        }
      }

      fetchDashboardData();
    </script>
  </body>
</html>
